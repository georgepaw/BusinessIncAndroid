<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_page_card_table"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    card_view:cardCornerRadius="2dp"
    android:clickable="true"

    >

    <RelativeLayout
        android:id="@+id/match_result_item_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingTop="8dp"
        android:clickable="true"
        android:background="@drawable/bkg"
        android:gravity="center">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/match_result_item_result_image"
                android:src="@drawable/ic_thumb_down"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                />

            <RelativeLayout
                android:id="@+id/match_result_item_team1_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="70dp"
                android:paddingRight="16dp"
                >

                <TextView
                    android:id="@+id/match_result_item_match_team1_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="CompSci Vipers"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/match_result_item_match_team1_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="16"
                    android:textSize="14sp" />



            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/match_result_item_team2_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/match_result_item_team1_container"
                android:paddingLeft="70dp"
                android:paddingRight="16dp"
                android:paddingTop="4dp">

                <TextView
                    android:id="@+id/match_result_item_match_team2_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:text="Autistics Athletics"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/match_result_item_match_team2_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:text="8"
                    android:textSize="14sp">

                </TextView>


            </RelativeLayout>



        </RelativeLayout>



    </RelativeLayout>


    <!--<View-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="1px"-->
        <!--android:layout_alignBottom="@id/match_result_item_container"-->
        <!--android:background="@color/grey"></View>-->


</android.support.v7.widget.CardView>