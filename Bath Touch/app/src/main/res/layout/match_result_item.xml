<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/match_result_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        >

        <RelativeLayout
            android:id="@+id/match_result_item_team1_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/match_result_item_match_team1_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Business Inc United"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/match_result_item_match_team1_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="16"
                android:textSize="16sp" />

        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/match_result_item_team2_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/match_result_item_team1_container"
            android:paddingTop="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/match_result_item_match_team2_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="Autistics Athletics"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/match_result_item_match_team2_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:text="8"
                android:textSize="16sp">
                
                </TextView>
        </RelativeLayout>


    </RelativeLayout>



    <View
        android:layout_alignBottom="@id/match_result_item_container"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/grey"></View>










</RelativeLayout>