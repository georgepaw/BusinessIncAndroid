<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="company.businessinc.bathtouch.TeamResultsFragment"
    android:theme="@android:style/Theme.WithActionBar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="company.businessinc.bathtouch.TeamResultsActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_team_roster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="?attr/colorPrimary"
            android:elevation="2dp"
            android:minHeight="?attr/actionBarSize"
            />

        <RelativeLayout
            android:id="@+id/team_roster_header"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@id/toolbar_team_roster"
            android:background="@color/primary"
            android:elevation="2dp"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/team_roster_next_match_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Match"
                android:textColor="@color/white"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/team_roster_league"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/team_roster_next_match_text"
                android:text="Bath Touch Summer Hardcode"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/team_roster_match_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/team_roster_league"
                android:text="12/12/12"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/team_roster_match_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/team_roster_match_date"
                android:text="18:30"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/team_roster_match_time"
                >

                <TextView
                    android:id="@+id/team_roster_team1_name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="Comski Vipers"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/team_roster_team1_name"
                    android:paddingTop="20dp"
                    android:text="vs"
                    android:textColor="@color/white" />


                <TextView
                    android:id="@+id/team_roster_team2_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="HCI Smashers"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

            </RelativeLayout>


        </RelativeLayout>

        <company.businessinc.bathtouch.SlidingTabLayout
            android:id="@+id/sliding_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/team_roster_header">

            </company.businessinc.bathtouch.SlidingTabLayout>



        <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/team_roster_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sliding_tabs"
            >
        </android.support.v4.view.ViewPager>

    </RelativeLayout>




</FrameLayout>
