<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_page_card_table"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bkg">


        <android.support.v7.widget.CardView
            android:id="@+id/ref_match_result_item_container"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ref_match_result_item_result_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp" />


                <RelativeLayout
                    android:id="@+id/ref_match_result_item_team1_container"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:paddingLeft="72dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp">

                    <TextView
                        android:id="@+id/ref_match_result_item_match_team1_name"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="CompSci Vipers"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/ref_match_result_item_match_team1_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="16"
                        android:textSize="16sp" />


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/ref_match_result_item_team2_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/ref_match_result_item_team1_container"
                    android:gravity="center"
                    android:paddingBottom="16dp"
                    android:paddingLeft="72dp"
                    android:paddingRight="16dp">

                    <TextView
                        android:id="@+id/ref_match_result_item_match_team2_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Autistics Athletics"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/ref_match_result_item_match_team2_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
                        android:text="8"
                        android:textSize="16sp">

                    </TextView>


                </RelativeLayout>

            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </RelativeLayout>


</FrameLayout>