<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_submit_score"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="2dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"/>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="5dp"
        android:id="@+id/team1_card"
        >

        <View
            android:id="@+id/team1_color_bar"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:background="@color/red"
            >

        </View>

        <LinearLayout
            android:layout_marginLeft="100dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="@color/white">

            <TextView
                android:gravity="bottom"
                android:focusable="true"
                android:clickable="true"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:textSize="24sp"
                android:textColor="@color/grey"
                android:text="Business Inc United"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:layout_gravity="center"


                />
            
            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#8A8A8A">

                </View>


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="left"
                android:gravity="center"
                android:hint="Score"
                android:textSize="24dp"
                android:layout_margin="16dp"
                android:textColorHint="@color/orange"
                android:background="@color/white"
                android:textColor="@color/orange"
                android:layout_weight="2"
                android:inputType="number"
                />



        </LinearLayout>

    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="5dp"
        android:id="@+id/team2_card"

        >


        <View
            android:id="@+id/team2_color_bar"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:background="@color/blue"
            >

        </View>

        <LinearLayout
            android:layout_marginLeft="100dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="@color/white"
            >


            <TextView
                android:gravity="bottom"
                android:focusable="true"
                android:clickable="true"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:textSize="24sp"
                android:textColor="@color/grey"
                android:text="Autistics Athletic Club"
                android:layout_margin="16dp"
                android:layout_weight="1"

                />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#8A8A8A">

            </View>


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="left"
                android:gravity="center"
                android:hint="Score"
                android:textSize="24dp"
                android:layout_marginLeft="16dp"
                android:textColorHint="@color/orange"
                android:textColor="@color/orange"
                android:background="@color/white"
                android:layout_weight="2"
                android:inputType="number"
                />



        </LinearLayout>



    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_height="70dp"
        android:layout_width="fill_parent"
        card_view:cardCornerRadius="4dp"
        android:layout_marginTop="16dp"
        android:id="@+id/submit_score_card"
        android:background="@color/white">

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:text="Submit Score"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:padding="8dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:textColor="@color/orange"/>



    </android.support.v7.widget.CardView>








</LinearLayout>