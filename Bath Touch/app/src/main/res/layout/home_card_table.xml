<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/home_page_card_table"
        card_view:cardCornerRadius="2dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
         >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="8dp">

            <TextView

                android:id="@+id/home_page_card_table_header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="EPL"

                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/home_page_card_table_subHeader"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_page_card_table_header"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:text="Subheader"
                android:textSize="16sp"/>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_page_card_table_subHeader"
                android:id="@+id/home_page_card_table_table_header"
                >

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:id="@+id/team_number"
                    android:text="#"
                    android:layout_marginLeft="8dp"

                    />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:id="@+id/team_name"
                    android:text="Team"
                    android:layout_marginRight="8dp"
                    android:layout_toRightOf="@id/team_number"
                    />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:id="@+id/team_points"
                    android:layout_alignParentRight="true"
                    android:text="PTS"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:id="@+id/team_lose"
                    android:layout_toLeftOf="@id/team_points"
                    android:text="L"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:id="@+id/team_draw"
                    android:layout_toLeftOf="@id/team_lose"
                    android:text="D"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:id="@+id/team_won"
                    android:layout_toLeftOf="@id/team_draw"
                    android:text="W"/>


                <View
                    android:layout_alignParentLeft="true"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_alignBottom="@id/team_name"/>



            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_page_card_table_table_header"
                android:id="@+id/home_page_card_table_row1"
                >

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:id="@+id/team_number1"
                    android:text="#"
                    android:layout_marginLeft="8dp"

                    />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:id="@+id/team_name1"
                    android:text="Team"
                    android:layout_marginRight="8dp"
                    android:layout_toRightOf="@id/team_number1"
                    />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:id="@+id/team_points1"
                    android:layout_alignParentRight="true"
                    android:text="PTS"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:id="@+id/team_lose1"
                    android:layout_toLeftOf="@id/team_points1"
                    android:text="L"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:id="@+id/team_draw1"
                    android:layout_toLeftOf="@id/team_lose1"
                    android:text="D"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:id="@+id/team_won1"
                    android:layout_toLeftOf="@id/team_draw1"
                    android:text="W"/>


                <View
                    android:layout_alignParentLeft="true"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_alignBottom="@id/team_name1"/>



            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_page_card_table_row1"
                android:id="@+id/home_page_card_table_row2"
                >

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:id="@+id/team_number2"
                    android:text="#"
                    android:layout_marginLeft="8dp"

                    />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:id="@+id/team_name2"
                    android:text="Team"
                    android:layout_marginRight="8dp"
                    android:layout_toRightOf="@id/team_number2"
                    />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:id="@+id/team_points2"
                    android:layout_alignParentRight="true"
                    android:text="PTS"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:id="@+id/team_lose2"
                    android:layout_toLeftOf="@id/team_points2"
                    android:text="L"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:id="@+id/team_draw2"
                    android:layout_toLeftOf="@id/team_lose2"
                    android:text="D"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:id="@+id/team_won2"
                    android:layout_toLeftOf="@id/team_draw2"
                    android:text="W"/>


                <View
                    android:layout_alignParentLeft="true"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_alignBottom="@id/team_name2"/>



            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_page_card_table_row2"
                android:id="@+id/home_page_card_table_row3"
                >

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:id="@+id/team_number3"
                    android:text="#"
                    android:layout_marginLeft="8dp"

                    />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:id="@+id/team_name3"
                    android:text="Team"
                    android:layout_marginRight="8dp"
                    android:layout_toRightOf="@id/team_number3"
                    />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:id="@+id/team_points3"
                    android:layout_alignParentRight="true"
                    android:text="PTS"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:id="@+id/team_lose3"
                    android:layout_toLeftOf="@id/team_points3"
                    android:text="L"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:id="@+id/team_draw3"
                    android:layout_toLeftOf="@id/team_lose3"
                    android:text="D"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:id="@+id/team_won3"
                    android:layout_toLeftOf="@id/team_draw3"
                    android:text="W"/>


            </RelativeLayout>


        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>