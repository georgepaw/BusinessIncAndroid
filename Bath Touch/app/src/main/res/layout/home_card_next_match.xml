<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_page_card_table"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:id="@+id/home_card_next_match_name_layout">

            <TextView
                android:id="@+id/home_card_next_match_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_horizontal"
                android:text="Your next match"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_alignTop="@id/home_card_next_match_heading"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/home_card_next_match_team1_name"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Business Inc United"
                    android:textColor="@color/blue"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="VS"
                    android:textSize="14sp"

                    />

                <TextView
                    android:id="@+id/home_card_next_match_team2_name"
                    android:layout_width="140dp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Autistics Athletics"
                    android:textColor="@color/red"
                    android:textSize="24sp" />



            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/home_card_next_match_name_layout"
            android:background="@color/grey"
            android:layout_marginBottom="8dp">

        </View>

        <TextView
            android:id="@+id/home_card_next_match_pretty_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_card_next_match_name_layout"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="This Tuesday at 18:00"
            android:textSize="18sp"
            android:layout_margin="16dp"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/home_card_next_match_participation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Playing"
            android:textSize="18sp"
            android:layout_below="@id/home_card_next_match_name_layout"
            android:layout_marginTop="8dp"
            android:layout_margin="16dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/orange"
            />





    </RelativeLayout>


</android.support.v7.widget.CardView>
