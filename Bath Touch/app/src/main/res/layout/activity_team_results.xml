<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="company.businessinc.bathtouch.TeamResultsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_team_results_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:elevation="2dp"
        android:minHeight="?attr/actionBarSize" />

    <RelativeLayout
        android:id="@+id/team_results_header"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/toolbar_team_results_screen"
        android:background="@color/red"
        android:padding="16dp">

        <TextView
            android:id="@+id/team_results_header_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Business Inc's Results"
            android:textSize="24sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/team_results_header_team_pos"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1st in League"
            android:textSize="16sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/team_results_header_league_name"
            android:layout_above="@id/team_results_header_team_pos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bath Touch Summer League 2015"
            android:textSize="18sp"
            android:textColor="@color/white"/>



    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/team_results_recycle"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/team_results_header"
        android:clickable="false"
        android:scrollbars="vertical" />



</RelativeLayout>
