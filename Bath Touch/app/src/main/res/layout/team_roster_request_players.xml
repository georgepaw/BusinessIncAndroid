<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/team_roster_request_players_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_gravity="center"
                android:id="@+id/team_roster_request_males_layout">
                <RelativeLayout
                        android:id="@+id/team_roster_inlayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        >
                    <TextView
                        android:id="@+id/team_roster_request_male_players"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:text="Request Male Players"
                        style="@style/body_2_text"
                        android:textStyle="bold"/>

                    <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"

                            android:background="@color/grey_300"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"/>
                </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_gravity="center"
                android:layout_below="@id/team_roster_request_males_layout"
                android:id="@+id/team_roster_request_females_layout">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    >
                    <TextView style="@style/body_2_text"
                        android:id="@+id/team_roster_request_female_players"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:text="Request Female Players"
                        android:textStyle="bold"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>



</RelativeLayout>