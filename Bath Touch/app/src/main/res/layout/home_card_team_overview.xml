<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:id="@+id/home_page_card_teamOverviewcontainer"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/bkg"
    card_view:cardCornerRadius="2dp"

    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true">

        <ProgressBar
            android:id="@+id/home_card_teamOverview_progressbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <RelativeLayout
            android:id="@+id/home_card_teamOverview_nameandpos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"

            >

            <TextView
                android:id="@+id/home_card_teamOverview_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/home_card_teamOverview_captainName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_card_teamOverview_name"
                android:text=""
                android:textColor="@color/grey"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_arrow_forward" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/card_teamOverview_score_box"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/home_card_teamOverview_nameandpos"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            android:clickable="true"
            >

            <TextView
                android:id="@+id/home_card_teamOverview_leagueName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="16dp"
                android:paddingBottom="8dp"
                android:text=""
                android:textSize="18dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_trend_up" />

            <TextView
                android:id="@+id/home_card_teamOverview_position"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:gravity="bottom"
                android:paddingRight="16dp"
                android:paddingTop="20dp"
                android:text=""
                android:textSize="90dp"/>


        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/card_teamOverview_score_box"
            android:background="@color/grey" />

        <LinearLayout
            android:id="@+id/card_teamOverview_next_match_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_teamOverview_score_box"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp">



            <RelativeLayout
                android:id="@+id/home_card_teamOverview_row1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="vs"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/home_card_teamOverview_gameOne_teamOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:text=""
                    android:textSize="14dp"
                    />

                <TextView
                    android:id="@+id/home_card_teamOverview_gameOne_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text=""
                    android:textSize="14dp"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:id="@+id/home_card_teamOverview_gameOne_teamTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text=""
                    android:textSize="14dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/grey"
                    android:layout_alignParentBottom="true"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/home_card_teamOverview_row2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="vs"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/home_card_teamOverview_gameTwo_teamOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:text=""
                    android:textSize="14dp"
                    />

                <TextView
                    android:id="@+id/home_card_teamOverview_gameTwo_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text=""
                    android:textSize="14dp"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:id="@+id/home_card_teamOverview_gameTwo_teamTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text=""
                    android:textSize="14dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/grey"
                    android:layout_alignParentBottom="true"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/home_card_teamOverview_row3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="vs"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/home_card_teamOverview_gameThree_teamOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:text=""
                    android:textSize="14dp"
                    />

                <TextView
                    android:id="@+id/home_card_teamOverview_gameThree_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text=""
                    android:textSize="14dp"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:id="@+id/home_card_teamOverview_gameThree_teamTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text=""
                    android:textSize="14dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/grey"
                    android:layout_alignParentBottom="true"/>


            </RelativeLayout>


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/home_card_teamOverview_res2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/card_teamOverview_next_match_box"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View all fixtures"
                android:layout_alignParentRight="true"
                android:layout_marginRight="32dp"
                android:layout_centerVertical="true"
                android:textSize="14dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_forward_grey"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                />


        </RelativeLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>

