<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/fragment_team_overview_swiperefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="company.businessinc.bathtouch.TeamOverviewFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/fragment_team_overview_nextmatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"

                card_view:cardCornerRadius="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"

                    >

                    <TextView
                        android:id="@+id/fragment_team_overview_nextmatch_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next match playing"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/fragment_team_overview_nextmatch_image"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_below="@id/fragment_team_overview_nextmatch_header"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="16dp" />

                    <TextView
                        android:id="@+id/fragment_team_overview_nextmatch_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/fragment_team_overview_nextmatch_image"
                        android:layout_toRightOf="@+id/fragment_team_overview_nextmatch_image"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/fragment_team_overview_nextmatch_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fragment_team_overview_nextmatch_name"
                        android:layout_toRightOf="@+id/fragment_team_overview_nextmatch_image" />

                    <TextView
                        android:id="@+id/fragment_team_overview_nextmatch_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fragment_team_overview_nextmatch_place"
                        android:layout_toRightOf="@+id/fragment_team_overview_nextmatch_image" />

                    <Button
                        android:id="@+id/fragment_team_overview_nextmatch_manage"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/fragment_team_overview_nextmatch_date"
                        android:text="Manage team"
                        android:textAllCaps="true"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/fragment_team_overview_nextmatch_checkbox_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/fragment_team_overview_nextmatch_date"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:text="Available to play" />

                        <CheckBox
                            android:id="@+id/fragment_team_overview_nextmatch_checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/fragment_team_overview_nextrefmatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                card_view:cardCornerRadius="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/fragment_team_overview_nextrefmatch_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next match refereeing"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/fragment_team_overview_nextrefmatch_image"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_below="@id/fragment_team_overview_nextrefmatch_header"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="16dp" />

                    <TextView
                        android:id="@+id/fragment_team_overview_nextrefmatch_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/fragment_team_overview_nextrefmatch_image"
                        android:layout_toRightOf="@+id/fragment_team_overview_nextrefmatch_image"
                        android:text=""
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/fragment_team_overview_nextrefmatch_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fragment_team_overview_nextrefmatch_name"
                        android:layout_toRightOf="@+id/fragment_team_overview_nextrefmatch_image"
                        android:text="" />

                    <TextView
                        android:id="@+id/fragment_team_overview_nextrefmatch_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fragment_team_overview_nextrefmatch_place"
                        android:layout_toRightOf="@+id/fragment_team_overview_nextrefmatch_image"
                        android:text="" />

                    <Button
                        android:id="@+id/fragment_team_overview_nextrefmatch_submit"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/fragment_team_overview_nextrefmatch_date"
                        android:text="Submit Score"
                        android:textAllCaps="true"
                        android:textSize="14sp"
                        android:visibility="gone" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/fragment_team_overview_pastmatches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                card_view:cardCornerRadius="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/fragment_team_overview_pastmatches_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/fragment_team_overview_pastmatches_images"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fragment_team_overview_pastmatches_header"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/fragment_team_overview_pastmatches_image_1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/fragment_team_overview_pastmatches_image_2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/fragment_team_overview_pastmatches_image_3"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/fragment_team_overview_pastmatches_image_4"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/fragment_team_overview_pastmatches_image_5"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center" />
                        </FrameLayout>
                    </LinearLayout>
                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/fragment_team_overview_league"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                card_view:cardCornerRadius="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/fragment_team_overview_league_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="League"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fragment_team_overview_league_header"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/fragment_team_overview_league_points"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="points"
                                android:textAllCaps="true"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/fragment_team_overview_league_wins"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="wins"
                                android:textAllCaps="true"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/fragment_team_overview_league_draws"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="draws"
                                android:textAllCaps="true"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/fragment_team_overview_league_losses"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="losses"
                                android:textAllCaps="true"
                                android:textStyle="bold" />
                        </LinearLayout>


                    </LinearLayout>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>