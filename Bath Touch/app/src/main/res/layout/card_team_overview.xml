<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:id="@+id/home_page_card_team_container"
    android:layout_width="fill_parent"
    android:layout_height="470dp"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/bkg"
    card_view:cardCornerRadius="2dp"

    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true">

        <RelativeLayout
            android:id="@+id/home_card_team_nameandpos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"

            >

            <TextView
                android:id="@+id/home_card_team_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CompSci Vipers"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/home_card_team_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_card_team_name"
                android:text="Captain Name"
                android:textColor="@color/grey"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_arrow_forward" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/card_team_overview_score_box"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/home_card_team_nameandpos"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            android:clickable="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="16dp"
                android:paddingBottom="8dp"
                android:text="League Name"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_trend_up" />

            <TextView
                android:id="@+id/card_team_overview_position"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:gravity="bottom"
                android:paddingRight="16dp"
                android:paddingTop="20dp"
                android:text="1st"
                android:textSize="90dp"/>


        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/card_team_overview_score_box"
            android:background="@color/grey" />

        <LinearLayout
            android:id="@+id/card_team_overview_next_match_box"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/card_team_overview_score_box"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp">



            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/home_card_team_score1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="vs"
                    android:textSize="14dp" />

                <TextView
                    android:id="@id/home_card_team_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:text="HCI Hardcore"
                    android:textSize="14dp"
                    />

                <TextView
                    android:id="@+id/card_team_overview_match1_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="12/6/15"
                    android:textSize="14dp"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:id="@id/home_card_team_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="Comsci Vipers"
                    android:textSize="14dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/grey"
                    android:layout_alignParentBottom="true"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="vs"
                    android:textSize="14dp" />

                <TextView
                    android:id="@id/home_card_team_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:text="HCI Hardcore"
                    android:textSize="14dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="12/6/15"
                    android:textSize="14dp"
                    android:paddingBottom="4dp"
                    />

                <TextView
                    android:id="@id/home_card_team_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="Comsci Vipers"
                    android:textSize="14dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/grey"
                    android:layout_alignParentBottom="true"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="vs"
                    android:textSize="14dp" />

                <TextView
                    android:id="@id/home_card_team_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:text="HCI Hardcore"
                    android:textSize="14dp"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="12/6/15"
                    android:paddingBottom="4dp"
                    android:textSize="14dp" />

                <TextView
                    android:id="@id/home_card_team_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="Comsci Vipers"
                    android:textSize="14dp"
                     />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/grey"
                    android:layout_alignParentBottom="true"/>


            </RelativeLayout>


        </LinearLayout>




        <RelativeLayout
            android:id="@+id/home_card_team_res2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View all fixtures"
                android:layout_alignParentRight="true"
                android:layout_marginRight="32dp"
                android:layout_centerVertical="true"
                android:textSize="14dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_forward_grey"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                />


        </RelativeLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>


