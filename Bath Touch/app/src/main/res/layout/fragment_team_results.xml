<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="company.businessinc.bathtouch.TeamResultsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="company.businessinc.bathtouch.TeamResultsActivity">

        <RelativeLayout
            android:id="@+id/team_results_header"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/activity_main_toolbar"
            android:background="?attr/colorPrimary"
            android:padding="16dp"
            android:elevation="2dp">

            <TextView
                android:id="@+id/team_results_header_league_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Winter League 2015"
                android:textSize="14sp"
                android:textAllCaps="true"
                android:textColor="@color/white"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_more_horiz"/>



        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/team_results_recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:scrollbars="vertical"
            android:layout_below="@id/team_results_header"
            />

    </RelativeLayout>


</FrameLayout>
