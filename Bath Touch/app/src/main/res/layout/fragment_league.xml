<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="company.businessinc.bathtouch.LeagueFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/fragment_league_table_header"
            android:background="@color/primary_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:elevation="@dimen/headerbar_elevation">

            <TextView
                android:id="@+id/team_number"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="#"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:id="@+id/team_name"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/team_number"
                android:text="Team"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:id="@+id/team_points"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:text="PTS"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginRight="8dp"/>

            <TextView
                android:id="@+id/team_lose"
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_toLeftOf="@id/team_points"
                android:text="L"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/team_draw"
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_toLeftOf="@id/team_lose"
                android:text="D"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_marginLeft="8dp"
                android:id="@+id/team_won"
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_toLeftOf="@id/team_draw"
                android:text="W"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </RelativeLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_league_recycle"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/fragment_league_table_header"
            android:clickable="false"
            android:scrollbars="vertical" />

    </RelativeLayout>

</FrameLayout>
