<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_page_card_table"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/league_display_item_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/bkg"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">


            <RelativeLayout
                android:id="@+id/league_item_team1_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingRight="16dp">

                <ImageView
                    android:id="@+id/image_view"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp" />


                <TextView
                    android:id="@+id/league_item_team_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/image_view"
                    android:text="CompSci Vipers"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/league_item_team_points"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:gravity="center"
                    android:text="PTS"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/league_item_team_lose"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/league_item_team_points"
                    android:gravity="center"
                    android:text="L"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/league_item_team_draw"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/league_item_team_lose"
                    android:gravity="center"
                    android:text="D"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/league_item_team_won"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/league_item_team_draw"
                    android:gravity="center"
                    android:text="W"
                    android:textSize="16sp" />


            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/llExpandArea"
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:layout_below="@id/league_display_item_container"
        android:background="@color/cardview_light_background"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <ImageView
                android:id="@+id/league_display_pointsfor_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/league_item_ptsagn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="6dp"
                android:layout_toRightOf="@id/league_display_pointsfor_image"
                android:text="32"
                android:textSize="16dp"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_updown_arrow_grey"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/league_display_pointsagn_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/league_item_ptsfor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="6dp"
                android:layout_toLeftOf="@id/league_display_pointsagn_image"
                android:text="80"
                android:textSize="16dp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            >

            <ImageView
                android:id="@+id/league_item_close_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_expandless_grey"
                android:scaleType="fitXY"
                android:clickable="true"
                android:background="@drawable/grey_button"
                />

            <RelativeLayout
                android:id="@+id/league_item_team_overview_button"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:background="@drawable/grey_button"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Team Overview"
                    android:textSize="14dp"
                    android:layout_alignParentRight="true"
                    android:paddingRight="30dp"
                    android:layout_centerVertical="true"
                    />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_arrow_forward_grey"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>


                </RelativeLayout>



        </RelativeLayout>


    </RelativeLayout>


    <!--<View-->
    <!--android:layout_width="fill_parent"-->
    <!--android:layout_height="1px"-->
    <!--android:layout_alignBottom="@id/league_display__item_container"-->
    <!--android:background="@color/grey"></View>-->


</RelativeLayout>