<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_page_card_table"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:clickable="true"
        >

    <RelativeLayout
        android:id="@+id/league_display_item_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bkg"
        android:clickable="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <!--<TextView-->
                <!--android:id="@+id/league_item_team_position"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginLeft="18dp"-->
                <!--android:text="1"-->
                <!--android:textColor="@color/orange"-->
                <!--android:textSize="40sp" />-->


            <RelativeLayout
                android:id="@+id/league_item_team1_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingRight="16dp">

                <ImageView android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/image_view"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    />


                <TextView
                    android:layout_toRightOf="@id/image_view"
                    android:id="@+id/league_item_team_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CompSci Vipers"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                     />

                <TextView
                    android:id="@+id/league_item_team_points"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="4dp"
                    android:gravity="center"
                    android:text="PTS"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/league_item_team_lose"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/league_item_team_points"
                    android:gravity="center"
                    android:text="L"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/league_item_team_draw"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/league_item_team_lose"
                    android:gravity="center"
                    android:text="D"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/league_item_team_won"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/league_item_team_draw"
                    android:gravity="center"
                    android:text="W"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"/>


            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/league_display_item_container"
        android:id="@+id/llExpandArea"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/primary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="Item One" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="Item Two" />

    </LinearLayout>


    <!--<View-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="1px"-->
        <!--android:layout_alignBottom="@id/league_display__item_container"-->
        <!--android:background="@color/grey"></View>-->


</RelativeLayout>