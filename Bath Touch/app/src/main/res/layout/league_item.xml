<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_page_card_table"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    card_view:cardCornerRadius="2dp"
    android:clickable="true"
        >

    <RelativeLayout
        android:id="@+id/league_display__item_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bkg"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/league_item_team_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:text="1"
                android:textColor="@color/orange"
                android:textSize="40sp" />

            <RelativeLayout
                android:id="@+id/league_item_team1_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/league_item_team_position"
                android:paddingLeft="20dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/league_item_team_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="CompSci Vipers"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/league_item_team_points"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="4dp"
                    android:gravity="center"
                    android:text="PTS"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/league_item_team_lose"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/league_item_team_points"
                    android:gravity="center"
                    android:text="L"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/league_item_team_draw"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/league_item_team_lose"
                    android:gravity="center"
                    android:text="D"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/league_item_team_won"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/league_item_team_draw"
                    android:gravity="center"
                    android:text="W"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"/>


            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_alignBottom="@id/league_display__item_container"
        android:background="@color/grey"></View>


</android.support.v7.widget.CardView>